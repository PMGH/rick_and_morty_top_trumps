<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.peter.toptrumps.Activities.ResultActivity">

    <TextView
        android:id="@+id/round_result_title_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="3dp"
        android:textColor="@color/colorAccent"
        android:textSize="22sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Round 1 Result" />

    <TextView
        android:id="@+id/cpu_name_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="48dp"
        android:textColor="@android:color/holo_red_dark"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        tools:text="CPU Christine"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/round_category_text" />

    <TextView
        android:id="@+id/user_name_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="79dp"
        android:layout_marginTop="0dp"
        android:textColor="@android:color/holo_green_dark"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/cpu_name_text"
        tools:text="Peter" />

    <ImageView
        android:id="@+id/cpu_top_card_backplate"
        android:layout_width="164dp"
        android:layout_height="280dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="5dp"
        android:background="#ffcc0000"
        android:contentDescription="@string/cpu_top_card_backplate_black_image"
        android:padding="3dp"
        android:scaleType="fitXY"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cpu_name_text"
        app:srcCompat="@drawable/card_background" />

    <ImageView
        android:id="@+id/user_top_card_backplate"
        android:layout_width="164dp"
        android:layout_height="280dp"
        android:layout_marginEnd="4dp"
        android:layout_marginTop="5dp"
        android:background="#ff669900"
        android:contentDescription="@string/user_top_card_backplate_black_image"
        android:padding="3dp"
        android:scaleType="fitXY"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintLeft_toRightOf="@+id/cpu_top_card_backplate"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/user_name_text"
        app:srcCompat="@drawable/card_background" />

    <ImageView
        android:id="@+id/cpu_top_card_character_image"
        android:layout_width="130dp"
        android:layout_height="110dp"
        android:layout_marginStart="18dp"
        android:layout_marginTop="12dp"
        android:background="#424242"
        android:contentDescription="@string/cpu_top_card_character_image"
        android:padding="2dp"
        android:scaleType="fitXY"
        app:layout_constraintLeft_toLeftOf="@+id/cpu_top_card_backplate"
        app:layout_constraintTop_toBottomOf="@+id/cpu_top_card_name_text"
        app:srcCompat="@drawable/rick_and_morty_title" />

    <TextView
        android:id="@+id/cpu_top_card_name_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:textColor="@color/colorAccent"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="@+id/cpu_top_card_backplate"
        app:layout_constraintRight_toRightOf="@+id/cpu_top_card_backplate"
        app:layout_constraintTop_toTopOf="@+id/cpu_top_card_backplate"
        tools:text="Rick Sanchez" />

    <TextView
        android:id="@+id/cpu_top_card_intellect_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="0dp"
        android:layout_marginTop="14dp"
        android:text="@string/intellect"
        android:textColor="@color/colorAccent"
        android:textSize="12sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="@+id/cpu_top_card_character_image"
        app:layout_constraintTop_toBottomOf="@+id/cpu_top_card_character_image" />

    <TextView
        android:id="@+id/cpu_top_card_intellect_value_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="1dp"
        android:layout_marginTop="0dp"
        android:textColor="@color/colorAccent"
        android:textSize="12sp"
        android:textStyle="bold"
        app:layout_constraintRight_toRightOf="@+id/cpu_top_card_character_image"
        app:layout_constraintTop_toTopOf="@+id/cpu_top_card_intellect_text"
        tools:text="85 / 100" />

    <TextView
        android:id="@+id/cpu_top_card_lethality_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="0dp"
        android:layout_marginTop="14dp"
        android:text="@string/lethality"
        android:textColor="@color/colorAccent"
        android:textSize="12sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="@+id/cpu_top_card_character_image"
        app:layout_constraintTop_toBottomOf="@+id/cpu_top_card_intellect_text" />

    <TextView
        android:id="@+id/cpu_top_card_lethality_value_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="1dp"
        android:layout_marginTop="0dp"
        android:textColor="@color/colorAccent"
        android:textSize="12sp"
        android:textStyle="bold"
        app:layout_constraintRight_toRightOf="@+id/cpu_top_card_character_image"
        app:layout_constraintTop_toTopOf="@+id/cpu_top_card_lethality_text"
        tools:text="90 / 100" />

    <TextView
        android:id="@+id/cpu_top_card_morality_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="0dp"
        android:layout_marginTop="14dp"
        android:text="@string/morality"
        android:textColor="@color/colorAccent"
        android:textSize="12sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="@+id/cpu_top_card_character_image"
        app:layout_constraintTop_toBottomOf="@+id/cpu_top_card_lethality_text" />

    <TextView
        android:id="@+id/cpu_top_card_morality_value_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="1dp"
        android:layout_marginTop="0dp"
        android:textColor="@color/colorAccent"
        android:textSize="12sp"
        android:textStyle="bold"
        app:layout_constraintRight_toRightOf="@+id/cpu_top_card_character_image"
        app:layout_constraintTop_toTopOf="@+id/cpu_top_card_morality_text"
        tools:text="40 / 100" />

    <TextView
        android:id="@+id/cpu_top_card_howSchwifty_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="0dp"
        android:layout_marginTop="14dp"
        android:text="@string/how_schwifty"
        android:textColor="@color/colorAccent"
        android:textSize="12sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="@+id/cpu_top_card_character_image"
        app:layout_constraintTop_toBottomOf="@+id/cpu_top_card_morality_text" />

    <TextView
        android:id="@+id/cpu_top_card_howSchwifty_value_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="0dp"
        android:layout_marginTop="0dp"
        android:textColor="@color/colorAccent"
        android:textSize="12sp"
        android:textStyle="bold"
        app:layout_constraintRight_toRightOf="@+id/cpu_top_card_character_image"
        app:layout_constraintTop_toTopOf="@+id/cpu_top_card_howSchwifty_text"
        tools:text="9 / 10" />

    <TextView
        android:id="@+id/user_top_card_name_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:textColor="@color/colorAccent"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="@+id/user_top_card_backplate"
        app:layout_constraintRight_toRightOf="@+id/user_top_card_backplate"
        app:layout_constraintTop_toTopOf="@+id/user_top_card_backplate"
        tools:text="Morty Smith" />

    <ImageView
        android:id="@+id/user_top_card_character_image"
        android:layout_width="130dp"
        android:layout_height="110dp"
        android:layout_marginEnd="4dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="12dp"
        android:background="#424242"
        android:contentDescription="@string/user_top_card_character_image"
        android:padding="2dp"
        android:scaleType="fitXY"
        app:layout_constraintLeft_toLeftOf="@+id/user_top_card_backplate"
        app:layout_constraintRight_toRightOf="@+id/user_top_card_backplate"
        app:layout_constraintTop_toBottomOf="@+id/user_top_card_name_text"
        app:srcCompat="@drawable/rick_and_morty_title" />

    <TextView
        android:id="@+id/user_top_card_intellect_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="0dp"
        android:layout_marginTop="14dp"
        android:text="@string/intellect"
        android:textColor="@color/colorAccent"
        android:textSize="12sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="@+id/user_top_card_character_image"
        app:layout_constraintTop_toBottomOf="@+id/user_top_card_character_image" />

    <TextView
        android:id="@+id/user_top_card_intellect_value_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="0dp"
        android:layout_marginTop="0dp"
        android:textColor="@color/colorAccent"
        android:textSize="12sp"
        android:textStyle="bold"
        app:layout_constraintRight_toRightOf="@+id/user_top_card_character_image"
        app:layout_constraintTop_toTopOf="@+id/user_top_card_intellect_text"
        tools:text="40 / 100" />

    <TextView
        android:id="@+id/user_top_card_lethality_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="0dp"
        android:layout_marginTop="14dp"
        android:text="@string/lethality"
        android:textColor="@color/colorAccent"
        android:textSize="12sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="@+id/user_top_card_character_image"
        app:layout_constraintTop_toBottomOf="@+id/user_top_card_intellect_text" />

    <TextView
        android:id="@+id/user_top_card_lethality_value_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="0dp"
        android:layout_marginTop="0dp"
        android:textColor="@color/colorAccent"
        android:textSize="12sp"
        android:textStyle="bold"
        app:layout_constraintRight_toRightOf="@+id/user_top_card_character_image"
        app:layout_constraintTop_toTopOf="@+id/user_top_card_lethality_text"
        tools:text="60 / 100" />

    <TextView
        android:id="@+id/user_top_card_morality_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="0dp"
        android:layout_marginTop="14dp"
        android:text="@string/morality"
        android:textColor="@color/colorAccent"
        android:textSize="12sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="@+id/user_top_card_character_image"
        app:layout_constraintTop_toBottomOf="@+id/user_top_card_lethality_text" />

    <TextView
        android:id="@+id/user_top_card_morality_value_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="0dp"
        android:layout_marginTop="1dp"
        android:textColor="@color/colorAccent"
        android:textSize="12sp"
        android:textStyle="bold"
        app:layout_constraintRight_toRightOf="@+id/user_top_card_character_image"
        app:layout_constraintTop_toTopOf="@+id/user_top_card_morality_text"
        tools:text="80 / 100" />

    <TextView
        android:id="@+id/user_top_card_howSchwifty_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="0dp"
        android:layout_marginTop="14dp"
        android:text="@string/how_schwifty"
        android:textColor="@color/colorAccent"
        android:textSize="12sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="@+id/user_top_card_character_image"
        app:layout_constraintTop_toBottomOf="@+id/user_top_card_morality_text" />

    <TextView
        android:id="@+id/user_top_card_howSchwifty_value_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="0dp"
        android:layout_marginTop="1dp"
        android:textColor="@color/colorAccent"
        android:textSize="12sp"
        android:textStyle="bold"
        app:layout_constraintRight_toRightOf="@+id/user_top_card_character_image"
        app:layout_constraintTop_toTopOf="@+id/user_top_card_howSchwifty_text"
        tools:text="8 / 10" />

    <TextView
        android:id="@+id/round_win_declaration_text"
        android:layout_width="337dp"
        android:layout_height="29dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:textAlignment="center"
        android:textColor="@android:color/holo_green_dark"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintHorizontal_bias="0.571"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        tools:text="CPU Christine won with a score of 90."
        android:layout_marginTop="21dp"
        app:layout_constraintTop_toBottomOf="@+id/cpu_top_card_backplate" />

    <TextView
        android:id="@+id/round_category_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:textStyle="bold"
        tools:text="Category:  Intellect"
        android:layout_marginTop="25dp"
        app:layout_constraintTop_toBottomOf="@+id/round_result_title_text"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent" />

    <Button
        android:id="@+id/next_round_btn"
        android:layout_width="141dp"
        android:layout_height="51dp"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:background="@color/colorPrimary"
        android:onClick="nextRoundButtonOnClick"
        android:text="@string/next_round_btn_text"
        android:textColor="@color/colorAccent"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/round_win_declaration_text"
        app:layout_constraintVertical_bias="1.0"
        tools:layout_editor_absoluteY="452dp"
        app:layout_constraintHorizontal_bias="0.502" />
</android.support.constraint.ConstraintLayout>
