<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.peter.toptrumps.TopCardActivity">

    <TextView
        android:id="@+id/character_name_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="52dp"
        android:textColor="@color/colorPrimary"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        tools:text="Character Name"
        android:layout_marginTop="38dp"
        app:layout_constraintTop_toBottomOf="@+id/top_card_activity_title" />

    <ImageView
        android:id="@+id/character_image"
        android:layout_width="307dp"
        android:layout_height="220dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:contentDescription="@string/character_image"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:srcCompat="@drawable/rick_and_morty_title"
        android:layout_marginTop="19dp"
        app:layout_constraintTop_toBottomOf="@+id/character_name_text" />

    <TextView
        android:id="@+id/intellect_value_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="72dp"
        android:layout_marginRight="0dp"
        android:layout_marginStart="72dp"
        android:layout_marginTop="15dp"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toRightOf="@+id/intellect_text"
        app:layout_constraintRight_toRightOf="@+id/character_image"
        app:layout_constraintTop_toBottomOf="@+id/character_image"
        tools:text="i / 100"
        app:layout_constraintHorizontal_bias="0.0" />

    <TextView
        android:id="@+id/intellect_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="49dp"
        android:layout_marginTop="15dp"
        android:text="@string/intellect_text"
        android:textSize="24sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/character_image"
        android:layout_marginLeft="118dp" />

    <TextView
        android:id="@+id/lethality_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="49dp"
        android:text="@string/lethality_text"
        android:textSize="24sp"
        android:layout_marginTop="7dp"
        app:layout_constraintTop_toBottomOf="@+id/intellect_text"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="118dp" />

    <TextView
        android:id="@+id/lethality_value_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="67dp"
        android:layout_marginRight="0dp"
        android:layout_marginStart="67dp"
        android:layout_marginTop="7dp"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toRightOf="@+id/lethality_text"
        app:layout_constraintRight_toRightOf="@+id/character_image"
        app:layout_constraintTop_toBottomOf="@+id/intellect_value_text"
        tools:text="l / 100"
        app:layout_constraintHorizontal_bias="0.0" />

    <TextView
        android:id="@+id/morality_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="49dp"
        android:layout_marginTop="7dp"
        android:text="@string/morality_text"
        android:textSize="24sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lethality_text"
        android:layout_marginLeft="118dp" />

    <TextView
        android:id="@+id/morality_value_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="0dp"
        android:layout_marginStart="69dp"
        android:layout_marginTop="6dp"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toRightOf="@+id/morality_text"
        app:layout_constraintRight_toRightOf="@+id/character_image"
        app:layout_constraintTop_toBottomOf="@+id/lethality_value_text"
        tools:text="m / 100"
        app:layout_constraintHorizontal_bias="0.022" />

    <TextView
        android:id="@+id/howSchwifty_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="49dp"
        android:layout_marginTop="9dp"
        android:textSize="24sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/morality_text"
        tools:text="@string/how_schwifty_text"
        android:layout_marginLeft="118dp" />

    <TextView
        android:id="@+id/howSchwifty_value_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="21dp"
        android:layout_marginRight="0dp"
        android:layout_marginStart="21dp"
        android:layout_marginTop="10dp"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toRightOf="@+id/howSchwifty_text"
        app:layout_constraintRight_toRightOf="@+id/character_image"
        app:layout_constraintTop_toBottomOf="@+id/morality_value_text"
        tools:text="s / 10"
        app:layout_constraintHorizontal_bias="0.0" />

    <Button
        android:id="@+id/confirm_selection_btn"
        android:layout_width="163dp"
        android:layout_height="60dp"
        android:layout_marginBottom="9dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:text="@string/confirm_selection"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.504"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/howSchwifty_text" />

    <TextView
        android:id="@+id/top_card_activity_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:text="@string/player_top_card_title_text"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</android.support.constraint.ConstraintLayout>
