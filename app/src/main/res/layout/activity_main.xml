<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.peter.toptrumps.MainActivity">

    <TextView
        android:id="@+id/round_number_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:textColor="@color/colorAccent"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Round: 1" />

    <ImageView
        android:id="@+id/CPU_user_image"
        android:layout_width="99dp"
        android:layout_height="92dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="66dp"
        android:contentDescription="@string/cpu_user_image_content_description"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@mipmap/ic_launcher_round" />

    <TextView
        android:id="@+id/CPU_user_name_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginStart="8dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/CPU_user_wins_text"
        app:layout_constraintLeft_toRightOf="@+id/CPU_user_image"
        tools:text="CPU user name" />

    <TextView
        android:id="@+id/CPU_user_wins_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        tools:text="CPU user wins"
        app:layout_constraintLeft_toRightOf="@+id/CPU_user_image"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/CPU_user_num_cards_text" />

    <TextView
        android:id="@+id/CPU_user_num_cards_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginStart="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/CPU_user_image"
        app:layout_constraintLeft_toRightOf="@+id/CPU_user_image"
        tools:text="CPU user number of cards" />

    <ImageView
        android:id="@+id/card_pile_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:contentDescription="@string/card_pile_image"
        app:layout_constraintBottom_toTopOf="@+id/user_name_text"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/CPU_user_num_cards_text"
        app:srcCompat="@drawable/card_deck" />

    <ImageView
        android:id="@+id/user_image"
        android:layout_width="82dp"
        android:layout_height="85dp"
        android:layout_marginBottom="41dp"
        android:layout_marginStart="8dp"
        android:contentDescription="@string/user_image_content_description"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:srcCompat="@mipmap/ic_launcher" />

    <TextView
        android:id="@+id/user_name_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginStart="8dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/user_wins_text"
        app:layout_constraintLeft_toRightOf="@+id/user_image"
        tools:text="User name" />

    <TextView
        android:id="@+id/user_wins_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="User wins"
        app:layout_constraintLeft_toRightOf="@+id/user_image"
        android:layout_marginStart="8dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/user_num_cards_text" />

    <TextView
        android:id="@+id/user_num_cards_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="7dp"
        android:layout_marginStart="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/user_image"
        app:layout_constraintLeft_toRightOf="@+id/user_image"
        tools:text="User number of cards" />

    <Button
        android:id="@+id/play_round_btn"
        android:layout_width="137dp"
        android:layout_height="68dp"
        android:layout_marginBottom="48dp"
        android:layout_marginEnd="16dp"
        android:background="@color/colorPrimary"
        android:onClick="playRoundButtonOnClick"
        android:text="@string/play_round"
        android:textColor="@color/colorAccent"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_editor_absoluteX="259dp"
        tools:layout_editor_absoluteY="487dp" />
</android.support.constraint.ConstraintLayout>
